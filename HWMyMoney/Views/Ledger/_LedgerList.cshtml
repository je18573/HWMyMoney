@using HWMyMoney.Extension
@model IEnumerable<HWMyMoney.Models.LedgerViewModel>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @{
                var index = 1;
            }
            @foreach (var data in Model)
            {
                <tr>
                    <td>@index</td>
                    <td>@(data.Category.GetDisplayName())</td>
                    <td>@data.Date</td>
                    <td>@data.Money</td>
                </tr>
                index++;
            }
        </table>
    </div>
</div>
